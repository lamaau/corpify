{
    "compilerOptions": {
        "baseUrl": ".",
        "resolveJsonModule": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "types": [
            "vite/client"
        ],
        "lib": [
            "dom",
            "esnext"
        ],
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
        },
    },
    "include": [
        "resources/ts/**/*",
        "resources/js/**/*",
        "resources/vue/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}